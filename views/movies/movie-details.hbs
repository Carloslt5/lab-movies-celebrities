<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <h2>{{title}}</h2>
            <hr>

            <article>

                <p><strong>Genre:</strong> {{genre}}</p>
                <p><strong>Plot:</strong> {{plot}}</p>
                <p><strong>Cast/s:</strong></p>

                {{#each cast}}
                <ul>
                    <li>{{name}}</li>
                </ul>
                {{/each}}

            </article>

            <hr>

            <a href="/movies/{{_id}}/edit" class="btn btn-light btn-outline-dark w-100 mb-4"> Edit Movie</a>

            <form action="/movies/{{_id}}/delete" method="POST">
                <input type="submit" value="Delete Movie" class="btn btn-outline-danger w-100">
            </form>

        </div>
    </div>